        <!--android:id="@+id/btnSign"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:buttonColor="@color/btnSignUp"-->
        <!--android:layout_weight="1"-->
        <!--android:text="Sign Up"-->
        <!--android:layout_margin="5dp"-->
        <!--/>-->

</RelativeLayout>