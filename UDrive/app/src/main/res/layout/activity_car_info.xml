<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tour_Info">

    <TextView
        android:id="@+id/caption"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Detail of tour"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/location"
        android:layout_width="101dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btn_date"
        android:layout_marginTop="106dp"
        android:text="LOCATION"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btn_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="193dp"
        android:text="Start DATE" />

    <Button
        android:id="@+id/btn_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_date"
        android:layout_marginEnd="25dp"
        android:text=" LAst DATE" />

    <Button
        android:id="@+id/btn_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/location"
        android:layout_marginBottom="206dp"
        android:text="Pick-up TIME" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:text="SUBMIT"
        android:textColor="#FF100F0F"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tx_location"
        android:layout_width="143dp"
        android:layout_height="32dp"
        android:layout_alignStart="@+id/btn_end_date"
        android:layout_alignTop="@+id/location"
        android:text="" />

    <TextView
        android:id="@+id/start_date"
        android:layout_width="149dp"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/location"
        android:layout_marginTop="254dp"
        android:text="" />

    <TextView
        android:id="@+id/end_date"
        android:layout_width="139dp"
        android:layout_height="29dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/start_date"
        android:layout_marginEnd="17dp"
        android:text="" />

    <TextView
        android:id="@+id/tx_time"
        android:layout_width="106dp"
        android:layout_height="26dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/end_date"
        android:layout_marginBottom="211dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="171dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="132dp"
        android:layout_marginStart="43dp"
        android:text="TextView" />


</RelativeLayout>